              <td class="px-3 py-5 text-sm"><%= issue_links(row['Issue Numbers'], org, repo) %></td>
              <td class="px-3 py-5 text-sm"><%= format_date(row['Created At']) %></td>
              <td class="px-3 py-5 text-sm"><%= format_date(row['Closed At']) %></td>
